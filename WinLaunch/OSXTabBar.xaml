                                    <GradientStop Offset="0.5" Color="#FFF4F4F4" />
                                    <GradientStop Offset="0.504" Color="#FFEDEDED" />
                                </LinearGradientBrush>
                            </Border.Background>

                            <ContentPresenter x:Name="Content"
